%tr
  %td= event.name
  %td= event.description
  %td= event.total_costs
  %td
    - if can? :read, event
      = link_to t('show'), event, class: 'btn btn-small'
  %td
    - if can? :update, event
      = link_to t('edit'), edit_event_path(event), class: 'btn btn-small'
  %td
    - if can? :destroy, event
      = link_to t('destroy'), event, method: :delete, data: { confirm: t('sure') }, class: 'btn btn-danger btn-small'
